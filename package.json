{
  "name": "desviaciones-monorepo",
  "private": true,
  "scripts": {
    "setup": "npm --prefix api i && npm --prefix web i",
    "dev": "npm-run-all --parallel dev:*",
    "dev:api": "npm --prefix api run dev",
    "dev:web": "npm --prefix web run dev",
    "start:api": "npm --prefix api start",
    "build:web": "npm --prefix web run build",
    "preview:web": "npm --prefix web run preview"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
